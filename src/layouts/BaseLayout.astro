import Footer from "../components/Footer.astro";

const { title, description } = Astro.props;
---

<html>
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<div class="page-wrapper">
			<Header />
			<main>
				<slot />
			</main>
		</div>
		<Footer />
	</body>
</html>

