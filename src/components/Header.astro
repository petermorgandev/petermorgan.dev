---
import HeaderMenu from "@data/header-menu.json";
---

<header class="container">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-8 col-xl-6 my-5">
			<h1><a href="/">Peter Morgan</a></h1>
			<ul class="list-inline list-unstyled">
				{HeaderMenu.map((menuItem) => (
					<li>
						<a href={menuItem.url}>{menuItem.text}</a>
					</li>
				))}
			</ul>
		</div>
	</div>
</header>

<style lang="scss">
	.list-unstyled {
		list-style: none;
		margin-left: 0;
		padding-left: 0;
	}

	.list-inline {
		margin-bottom: 0;
	}

	li {
		display: inline;
		margin-left: 0;

		&:not(:first-of-type) {
			margin-left: 1.25rem;
		}

		a {
			font-size: 1.25rem;
		}
	}
</style>
