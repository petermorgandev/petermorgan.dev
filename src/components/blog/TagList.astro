---
export interface Props {
	centered?: boolean;
	tags: string[];
}

const { centered, tags } = Astro.props;
---

<ul class:list={[{ "center-items": centered }]}>
	{
		tags.sort().map((tag) => (
			<li>
				<a href={`/tag/${tag}/`}>#{tag}</a>
			</li>
		))
	}
</ul>

<style>
	ul {
		display: flex;
		flex-wrap: wrap;
		font-size: 1rem;
		gap: 0.75rem;
		line-height: 1;
		list-style: none;
		margin-bottom: 0;
		padding-left: 0;
		width: 100%;
	}

	.center-items {
		justify-content: center;
	}
</style>
