---
import BaseLayout from "@layouts/BaseLayout.astro";

const title = "404 Error";
const description = "The file or page you are trying to access cannot be found.";
---

<BaseLayout title={title} description={description}>
	<div>
		<h1>{title}</h1>

		<p>{description}</p>
	</div>
</BaseLayout>

<style>
	div {
		text-align: center;
		width: 100%;
	}

	h1 {
		line-height: 1;
		margin-bottom: 6rem;
		text-transform: uppercase;
	}

	p {
		margin-bottom: 0;
	}
</style>
